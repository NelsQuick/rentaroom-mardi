{% extends 'base.html.twig' %}

{% block title %}Welcome to our rooms!
{% endblock %}
{% block body %}
	{# {% if rooms|length > 0 %}
	    <p>{{ rooms|length }} résultats trouvés</p>
	{% endif %} #}
	{{ form_start(form) }}
	<div>
		{{ form_label(form.material) }}
		{{ form_widget(form.material) }}
	</div>
	<div>
		{{ form_label(form.software) }}
		{{ form_widget(form.software) }}
	</div>
	<div>
		{{ form_label(form.ergonomics) }}
		{{ form_widget(form.ergonomics) }}
	</div>
	{{ form_widget(form.filter) }}
	{{ form_end(form) }}

	<div class="row mt-3 mx-5">
		<h1 class='text-center'>ROOMS</h1>
		{% for room in rooms %}
			<div class="col-md-4 mb-5">
				<div class="shadow card card-bg rounded-3" style="width: 40rem;">
					<div class="card-body">
						<div class="text-center">
							<h5 class="card-title">{{ room.name }}
								-
								{{ room.capacity }}
								people</h5>
						</div>
						<div class="text-center">
							<p class="card-text">{{ room.description }}</p>
						</div>
						<div class="text-center mt-3">
							<a href={{ path("show_room", { id: room.id } )}} class="btn btn-primary">Show the room</a>
						</div>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}
