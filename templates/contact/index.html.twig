{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}

  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-lg-6 col-md-8 col-sm-10">
        <div class="card shadow p-3 mb-5 bg-white rounded">
          <div class="card-body">
                <h1 class="text-center">Contact</h1>
            <form>
              <div class="form-group">
                <label for="exampleFormControlInput1">Your email address</label>
                <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="yourmail@example.com">
              </div>
              <div class="form-group">
                <label for="exampleFormControlTextarea1">Your message</label>
                <textarea class="form-control" id="exampleFormControlTextarea1" placeholder="Type your message here..." rows="5"></textarea>
              </div>
              <div class="text-center">
                <button onclick="return confirm('Your message has correctly been sended')" type="submit" class="btn btn-primary mt-3">Send</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
