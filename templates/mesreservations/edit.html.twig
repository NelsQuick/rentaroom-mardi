{% extends 'base.html.twig' %}

{% block title %}Edit a reservation{% endblock %}

{% block body %}
<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <div class="card">
        <div class="card-body">
          <h1 class="card-title text-center mb-4">Modifier une réservation</h1>
          {{ form_start(form, {'attr': {'class': 'form-control'}}) }}
          <div class="form-group">
            {{ form_label(form.startDate, 'Date de début :', {'label_attr': {'class': 'fw-bold'}}) }}
            {{ form_widget(form.startDate, {'attr': {'class': 'form-control flatpickr', 'placeholder': 'Sélectionnez une date'}}) }}
          </div>
          <div class="form-group">
            {{ form_label(form.endDate, 'Date de fin :', {'label_attr': {'class': 'fw-bold'}}) }}
            {{ form_widget(form.endDate, {'attr': {'class': 'form-control flatpickr', 'placeholder': 'Sélectionnez une date'}}) }}
          </div>
          <div class="text-center mt-4">
            {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary btn-lg'}}) }}
          </div>
          {{ form_end(form) }}

          {% for type, messages in app.flashes %}
          {% for message in messages %}
          <div class="alert alert-{{ type }} mt-4" role="alert">
            {{ message }}
          </div>
          {% endfor %}
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
<script>
  flatpickr(".flatpickr", {
    enableTime: true,
    dateFormat: "Y-m-d H:i",
  });
</script>
{% endblock %}
